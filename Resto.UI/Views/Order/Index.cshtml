@{
    ViewData["Title"] = "Index";
}
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.css" />
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.js"></script>
<script language="javascript" type="text/javascript" src="~/js/Script/Order/Order.js"></script>
<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<! -- begin :: Content Header -->
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="page-header">
                <h1 class="text-bg-success mt-4" style="text-align:center"> Menu Resto</h1>
            </div>
            <!-- begin :: Datatable-->
            <div class="bs-component">
                <div class="col-sm-12">
                    <table class="table table-striped table-bordered table-hover datatable-custom-width" id="tblOrder" cellspacing="0">
                        <thead>
                            <tr>
                                <th style="text-align:center;min-width: 300px;">Name</th>
                                <th style="text-align:center;min-width: 300px;">Description</th>
                                <th style="text-align:center;min-width: 300px;">Price</th>
                                <th style="text-align:center;min-width: 120px;">Action</th>
                            </tr>
                        </thead>
                        <tbody id="bodyTask"></tbody>
                    </table>
                </div>
            </div>
            <! -- end :: Datatable -->
            <div class="row justify-content-md-center mt-4">
                <div class="col-11"></div>
                <div class="col-1">
                    <button type="button" class="btn btn-info" onclick="TableOrderHeader.DetailsOrdered()" id="listOrder">List</button>
                </div>
            </div>
            <! -- begin :: Modal -- >
            <div class="modal fade" id="detailsOrder">
                <div class="modal-dialog" style="position : absolute; float:left; left:50%; top:50%; transform:translate(-50%, -50%);">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Detail</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" arial-label="Close">
                                <span aria-hidden="true">
                                </span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div class="row">
                                @* <label id="txtDescFood" name="txtDescFood"></label>*@
                                <input id="txtDescFood" type="text" name="txtDescFood" class="form-control" />
                            </div>
                            <div class="row-mt-2">
                                <div class="col">
                                    <label>Add Quantity</label>
                                </div>
                                <div class="col">
                                    <input type="hidden" id="txtFoodId" />
                                    <input id="txtQty" type="number" min="0" step="1" name="txtQty" class="form-control" />
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-primary" onclick="Form.SaveModalInput()">Save</button>
                        </div>
                    </div>
                </div>
            </div>
            <! -- begin :: Modal -->
            <div class="modal fade" id="detailsOrdered">
                <div class="modal-dialog" style="position: absolute; float:left; left:40%; top:50%; transform: translate(-50%, -50%)">
                    <div class="modal-content" style="width:850px;">
                        <div class="modal-header">
                            <h5 class="modal-title">Ordered List</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true"></span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div class="col-sm-12">
                                <table class="table table-striped table-bordered dataTable" id="tblOrdered" style="width:100%">
                                    <thead>
                                        <tr role="row">
                                            <th class="datatable-col-10 select-all-raw"></th>
                                            <th style="text-align:center;min-width: 80px;">Name</th>
                                            <th style="text-align:center;min-width: 80px;">Description</th>
                                            <th style="text-align:center;min-width: 80px;">Price</th>
                                            <th style="text-align:center;min-width: 80px;">Quantity</th>
                                            <th style="text-align:center;min-width: 80px;">Amount</th>
                                        </tr>
                                    </thead>
                                    <tbody id="bodyTask"></tbody>
                                </table>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <div class="row">
                                <div class="col-8">
                                    <button type="button" class="btn btn-dark" disabled>Total Amount : <span id="txtTotalAmount"></span></button>
                                </div>
                                <div class="col-4">
                                    <button type="button" class="btn btn-primary" onclick="Form.SaveModelDetailsOrdered()">Payment</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <! -- begin :: Modal Payment -->
            <div class="modal fade" id="detailsPayment">
                <div class="modal-dialog" style="position: absolute; float:left; left:50%; top:50%; transform: translate(-50%, -50%)">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Payment Summary</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true"></span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div class="row mt-2">
                                <div class="col">
                                    <label>Payment:</label>
                                </div>
                                <div class="col">
                                    <label id="txtTotalPayment"></label>
                                </div>
                            </div>
                            <div class="row mt-2">
                                <div class="col">
                                    <input id="txtTotalPaymentInput" type="text" name="txtTotalPaymentInput" class="form-control" />
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-primary" id="savePayment " onclick="Ordered.Save()">Submit</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>







